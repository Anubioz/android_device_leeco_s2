###########################################################################
# libssh2 installation details
###########################################################################

prefix=/system
exec_prefix=${prefix}
libdir=/system/lib64
includedir=${prefix}/include

Name: libssh2
URL: https://www.libssh2.org/
Description: Library for SSH-based communication
Version: 1.8.2
Requires.private: libssl,libcrypto,zlib
Libs: -L${libdir} -lssh2 
Libs.private: 
Cflags: -I${includedir}
